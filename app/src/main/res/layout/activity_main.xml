                android:layout_height="57dp"
                android:height="120dp"
                android:ems="10"
                android:hint="Artist Name"
                android:inputType="text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editTextText25"
                android:layout_width="98dp"
                android:layout_height="57dp"
                android:height="120dp"
                android:ems="10"
                android:hint="rating"
                android:inputType="text"
                android:textSize="12sp" />

